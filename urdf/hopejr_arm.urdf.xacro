<?xml version="1.0"?>
<robot name="hopejr_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="hopejr_arm_macro" params="prefix parent_link xyz rpy">

        <link name="${prefix}base_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/180*0} 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/base_link.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/base_link.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-0.02 0 0.028" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.000213" ixy="0" ixz="0" iyy="0.007034" iyz="0" izz="0.008104"/>
            </inertial>
        </link>

        <joint name="${prefix}base_link_fixed" type="fixed">
            <parent link="${parent_link}"/>
            <child link="${prefix}base_link"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>

        <link name="${prefix}shoulder_yaw">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/shoulder_yaw.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/shoulder_yaw.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>

        <joint name="${prefix}shoulder_pitch" type="continuous">
            <parent link="${prefix}base_link"/>
            <child link="${prefix}shoulder_yaw"/>
            <origin xyz="0 0.07106 0.04453" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="10" velocity="1.0"/>
        </joint>

        <link name="${prefix}shoulder_roll">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/shoulder_roll.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/shoulder_roll.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-0.02 0 0.028" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>

        <joint name="${prefix}shoulder_yaw" type="revolute"> <parent link="${prefix}shoulder_yaw"/>
            <child link="${prefix}shoulder_roll"/>
            <origin xyz="0 0.05585 0" rpy="${-pi/2} 0 0"/>
            <axis xyz="1 0 0"/>
            <limit effort="10" velocity="1.0" lower="-1.71" upper="1.681" />
        </joint>

        <link name="${prefix}upper_elbow">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/upper_elbow.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/upper_elbow.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-0.02 0 0.028" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>

        <joint name="${prefix}shoulder_roll" type="revolute"> <parent link="${prefix}shoulder_roll"/>
            <child link="${prefix}upper_elbow"/>
            <origin xyz="0 0 0.0884" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
            <limit effort="10" velocity="1.0" lower="-1.172" upper="1.172" />
        </joint>

        <link name="${prefix}lower_elbow">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/lower_elbow.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/lower_elbow.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-0.02 0 0.028" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>

        <joint name="${prefix}elbow_flex" type="revolute">
            <parent link="${prefix}upper_elbow"/>
            <child link="${prefix}lower_elbow"/>
            <origin xyz="0.03765 0 0.11311" rpy="0 0 0"/>
            <axis xyz="0 -1 0"/>
            <limit effort="10" velocity="1.0" lower="-2.53" upper="-0.16" />
        </joint>

        <link name="${prefix}forearm">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/visual/forearm.dae" scale="1 1 1"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://hopejr_arm_description/meshes/collision/forearm.stl" scale="1 1 1"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-0.02 0 0.028" rpy="0 0 0"/>
                <mass value="2.0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>

        <joint name="${prefix}wrist_roll" type="revolute">
            <parent link="${prefix}lower_elbow"/>
            <child link="${prefix}forearm"/>
            <origin xyz="0 0 0.06325" rpy="0 0 0"/>
            <axis xyz="0 0 -1"/>
            <limit effort="10" velocity="1.0" lower="${-pi/4}" upper="${pi/18*21}" />
        </joint>

    </xacro:macro>
    
    <link name="base_footprint"/>
    <xacro:hopejr_arm_macro 
        prefix="" 
        parent_link="base_footprint" 
        xyz="0 0 0" 
        rpy="0 0 0"
    />

</robot>